  <script is:inline>
    // State
    let accessToken = localStorage.getItem('accessToken');
    let bookings = [];
    let filteredBookings = [];
    let services = [];
    let addons = [];
    let quotes = [];
    let currentPage = 1;
    const perPage = 10;
    let sortColumn = 'booking_date';
    let sortDirection = 'desc';
    let currentViewBooking = null;

    // Check auth
    if (!accessToken) {
      window.location.href = '/manage/login';
    } else {
      document.getElementById('app').classList.remove('hidden');

    // Inactivity timeout tracking (5 minutes)
    let lastActivity = Date.now();
    let inactivityWarningShown = false;

    function updateActivity() {
      lastActivity = Date.now();
      inactivityWarningShown = false;
    }

    // Track user activity
    document.addEventListener('click', updateActivity);
    document.addEventListener('keypress', updateActivity);
    document.addEventListener('scroll', updateActivity);
    document.addEventListener('mousemove', function() {
      // Throttle mousemove to once per second
      if (Date.now() - lastActivity > 1000) updateActivity();
    });

    // Check inactivity every 30 seconds
    setInterval(() => {
      const inactiveMs = Date.now() - lastActivity;
      const inactiveMinutes = inactiveMs / 60000;

      // Warning at 4 minutes
      if (inactiveMinutes >= 4 && !inactivityWarningShown) {
        inactivityWarningShown = true;
        showToast('Session will expire in 1 minute due to inactivity', 'warning');
      }

      // Logout at 5 minutes
      if (inactiveMinutes >= 5) {
        localStorage.removeItem('accessToken');
        localStorage.removeItem('refreshToken');
        window.location.href = '/manage/login?reason=inactive';
      }
    }, 30000);
    }

    // Toast function
    function showToast(message, type = 'success') {
      const container = document.getElementById('toast-container');
      const toast = document.createElement('div');
      toast.className = 'px-4 py-3 rounded-lg shadow-lg text-white transform transition-all duration-300 ' +
        (type === 'error' ? 'bg-red-600' : type === 'warning' ? 'bg-yellow-600' : 'bg-green-600');
      toast.textContent = message;
      container.appendChild(toast);
      setTimeout(() => {
        toast.style.opacity = '0';
        setTimeout(() => toast.remove(), 300);
      }, 3000);
    }

    // Confirm dialog
    function confirm(title, message) {
      return new Promise((resolve) => {
        const modal = document.getElementById('confirm-modal');
        document.getElementById('confirm-title').textContent = title;
        document.getElementById('confirm-message').textContent = message;
        modal.classList.remove('hidden');
        modal.classList.add('flex');

        const cleanup = () => {
          modal.classList.add('hidden');
          modal.classList.remove('flex');
        };

        document.getElementById('confirm-ok').onclick = () => { cleanup(); resolve(true); };
        document.getElementById('confirm-cancel').onclick = () => { cleanup(); resolve(false); };
      });
    }

    // API call helper
    // Token refresh helper
    async function refreshAccessToken() {
      const refreshToken = localStorage.getItem('refreshToken');
      if (!refreshToken) return false;

      try {
        const response = await fetch('/api/auth/refresh', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ refreshToken })
        });

        if (response.ok) {
          const data = await response.json();
          accessToken = data.accessToken;
          localStorage.setItem('accessToken', data.accessToken);
          return true;
        }
      } catch (e) {
        console.error('Token refresh failed:', e);
      }
      return false;
    }

    // API call helper with auto token refresh
    async function api(url, options = {}) {
      let response = await fetch(url, {
        ...options,
        headers: {
          'Content-Type': 'application/json',
          'Authorization': 'Bearer ' + accessToken,
          ...options.headers
        }
      });

      // If 401, try to refresh token and retry once
      if (response.status === 401) {
        const refreshed = await refreshAccessToken();
        if (refreshed) {
          response = await fetch(url, {
            ...options,
            headers: {
              'Content-Type': 'application/json',
              'Authorization': 'Bearer ' + accessToken,
              ...options.headers
            }
          });
        }

        // If still 401 after refresh attempt, logout
        if (response.status === 401) {
          localStorage.removeItem('accessToken');
          localStorage.removeItem('refreshToken');
          window.location.href = '/manage/login';
          return;
        }
      }

      return response;
    }

    // Load services
    async function loadServices() {
      try {
        const response = await fetch('/api/packages');
        if (response.ok) {
          services = await response.json();
          const select = document.getElementById('service-select');
          select.innerHTML = services.map(s =>
            '<option value="' + s.id + '">' + s.name + ' ($' + parseFloat(s.base_price).toFixed(0) + '+)</option>'
          ).join('');
          calculateTotal();
        }
      } catch (e) {
        console.error('Failed to load services:', e);
      }
    }

    // Load addons
    async function loadAddons() {
      try {
        const response = await fetch('/api/addons');
        if (response.ok) {
          addons = await response.json();
          const container = document.getElementById('addon-checkboxes');
          if (addons.length === 0) {
            container.innerHTML = '<p class="text-gray-400 text-sm">No add-ons available</p>';
          } else {
            container.innerHTML = addons.map(a =>
              '<label class="flex items-center gap-2 text-sm text-gray-300 cursor-pointer hover:text-white">' +
                '<input type="checkbox" class="addon-checkbox rounded bg-gray-600 border-gray-500 text-[#EB6C1D] focus:ring-[#EB6C1D]" value="' + a.id + '" data-sedan="' + a.sedan_price + '" data-suv="' + a.suv_price + '" data-commercial="' + a.commercial_price + '" onchange="calculateTotal()">' +
                '<span>' + a.name + ' (+$' + parseFloat(a.sedan_price).toFixed(0) + ')</span>' +
              '</label>'
            ).join('');
          }
          calculateTotal();
        }
      } catch (e) {
        console.error('Failed to load addons:', e);
      }
    }

    // Calculate invoice total
    function calculateTotal() {
      const vehicleType = document.querySelector('[name="vehicleType"]').value || 'sedan';
      const serviceSelect = document.getElementById('service-select');

      let total = 0;

      // Package price
      const serviceId = parseInt(serviceSelect.value);
      const pkg = services.find(s => s.id === serviceId);
      if (pkg) {
        const multiplier = pkg.vehicle_multipliers?.[vehicleType] || 1.0;
        total += parseFloat(pkg.base_price) * multiplier;
      }

      // Addon prices (from checkboxes)
      const selectedAddonIds = Array.from(document.querySelectorAll('.addon-checkbox:checked'))
        .map(cb => parseInt(cb.value))
        .filter(v => !isNaN(v));

      for (const addonId of selectedAddonIds) {
        const addon = addons.find(a => a.id === addonId);
        if (addon) {
          const priceKey = vehicleType === 'commercial' ? 'commercial_price'
            : vehicleType === 'suv' ? 'suv_price' : 'sedan_price';
          total += parseFloat(addon[priceKey]) || 0;
        }
      }

      // Custom line items
      document.querySelectorAll('#custom-items-list .custom-item-row').forEach(row => {
        const price = parseFloat(row.querySelector('.custom-item-price').value) || 0;
        total += price;
      });

      const deposit = total * 0.25;

      document.getElementById('calc-total').textContent = '$' + total.toFixed(2);
      document.getElementById('calc-deposit').textContent = '$' + deposit.toFixed(2);
    }

    // Custom line items management
    let customItemCounter = 0;
    document.getElementById('add-custom-item').addEventListener('click', () => {
      const list = document.getElementById('custom-items-list');
      const id = ++customItemCounter;
      const row = document.createElement('div');
      row.className = 'custom-item-row flex gap-2 items-center';
      row.innerHTML =
        '<input type="text" placeholder="Description" class="custom-item-name flex-1 px-2 py-1 bg-gray-700 border border-gray-600 rounded text-white text-sm">' +
        '<div class="relative"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-gray-400 text-sm">$</span>' +
        '<input type="number" step="0.01" min="0" placeholder="0.00" class="custom-item-price w-24 pl-5 pr-2 py-1 bg-gray-700 border border-gray-600 rounded text-white text-sm"></div>' +
        '<button type="button" class="remove-custom-item text-red-400 hover:text-red-300 text-xl leading-none">&times;</button>';
      list.appendChild(row);

      row.querySelector('.custom-item-price').addEventListener('input', calculateTotal);
      row.querySelector('.remove-custom-item').addEventListener('click', () => {
        row.remove();
        calculateTotal();
      });
    });

    // Load stats
    async function loadStats() {
      try {
        const response = await api('/api/bookings/stats/summary');
        if (response.ok) {
          const stats = await response.json();
          document.getElementById('stat-total').textContent = stats.totalBookings;
          document.getElementById('stat-pending').textContent = stats.pendingPayments;
          document.getElementById('stat-revenue').textContent = '$' + stats.thisMonthRevenue.toFixed(2);
          document.getElementById('stat-confirmed').textContent = stats.statusCounts.confirmed || 0;
        }
      } catch (e) {
        console.error('Failed to load stats:', e);
      }
    }

    // Load bookings
    async function loadBookings() {
      try {
        const response = await api('/api/bookings');
        if (response.ok) {
          bookings = await response.json();
          applyFilters();
          renderTodaySchedule();
        }
      } catch (e) {
        console.error('Failed to load bookings:', e);
        document.getElementById('bookings-table').innerHTML = '<tr><td colspan="8" class="px-4 py-8 text-center text-red-400">Failed to load bookings</td></tr>';
      }
    }

    // Render today's schedule
    function renderTodaySchedule() {
      const today = new Date().toISOString().split('T')[0];
      const todayBookings = bookings
        .filter(b => b.booking_date === today && b.status !== 'cancelled')
        .sort((a, b) => (a.booking_time || '').localeCompare(b.booking_time || ''));

      const container = document.getElementById('today-schedule');

      if (todayBookings.length === 0) {
        container.innerHTML = '<p class="text-gray-500 text-sm">No appointments scheduled for today</p>';
        return;
      }

      container.innerHTML = todayBookings.map(b => {
        const statusColors = {
          pending: 'bg-yellow-900 text-yellow-300',
          confirmed: 'bg-blue-900 text-blue-300',
          in_progress: 'bg-purple-900 text-purple-300',
          completed: 'bg-green-900 text-green-300'
        };
        const statusClass = statusColors[b.status] || 'bg-gray-700 text-gray-300';
        return '<div class="flex items-center justify-between bg-gray-700/50 rounded-lg px-3 py-2">' +
          '<div class="flex items-center gap-3">' +
            '<span class="text-white font-medium">' + formatTime(b.booking_time) + '</span>' +
            '<span class="text-gray-300">' + escapeHtml(b.customer_name) + '</span>' +
            '<span class="text-gray-500 text-sm capitalize">' + b.vehicle_type + '</span>' +
          '</div>' +
          '<span class="text-xs px-2 py-1 rounded ' + statusClass + '">' + b.status.replace('_', ' ') + '</span>' +
        '</div>';
      }).join('');
    }

    // Apply filters and sorting
    function applyFilters() {
      const search = document.getElementById('search-input').value.toLowerCase();
      const statusFilter = document.getElementById('filter-status').value;
      const paymentFilter = document.getElementById('filter-payment').value;

      filteredBookings = bookings.filter(b => {
        const matchSearch = !search ||
          b.customer_name.toLowerCase().includes(search) ||
          b.customer_email.toLowerCase().includes(search) ||
          b.customer_phone.includes(search);
        const matchStatus = !statusFilter || b.status === statusFilter;
        const matchPayment = !paymentFilter ||
          (paymentFilter === 'paid' && b.deposit_paid) ||
          (paymentFilter === 'unpaid' && !b.deposit_paid);
        return matchSearch && matchStatus && matchPayment;
      });

      // Sort
      filteredBookings.sort((a, b) => {
        let valA = a[sortColumn];
        let valB = b[sortColumn];
        if (sortColumn === 'total_amount' || sortColumn === 'id') {
          valA = parseFloat(valA) || 0;
          valB = parseFloat(valB) || 0;
        }
        if (valA < valB) return sortDirection === 'asc' ? -1 : 1;
        if (valA > valB) return sortDirection === 'asc' ? 1 : -1;
        return 0;
      });

      currentPage = 1;
      renderBookings();
    }

    // Render bookings table
    function renderBookings() {
      const start = (currentPage - 1) * perPage;
      const end = start + perPage;
      const pageBookings = filteredBookings.slice(start, end);
      const totalPages = Math.ceil(filteredBookings.length / perPage) || 1;

      const tbody = document.getElementById('bookings-table');

      if (pageBookings.length === 0) {
        tbody.innerHTML = '<tr><td colspan="8" class="px-4 py-8 text-center text-gray-400">No bookings found</td></tr>';
      } else {
        tbody.innerHTML = pageBookings.map(b => {
          const statusColors = {
            pending: 'bg-yellow-900 text-yellow-300',
            confirmed: 'bg-blue-900 text-blue-300',
            in_progress: 'bg-purple-900 text-purple-300',
            completed: 'bg-green-900 text-green-300',
            cancelled: 'bg-red-900 text-red-300'
          };
          const statusClass = statusColors[b.status] || 'bg-gray-700 text-gray-300';
          const paidBadge = b.final_paid
            ? '<span class="text-xs px-2 py-0.5 rounded bg-green-900 text-green-300">Full</span>'
            : (b.deposit_paid
              ? '<span class="text-xs px-2 py-0.5 rounded bg-yellow-900 text-yellow-300">Deposit</span>'
              : '<span class="text-xs px-2 py-0.5 rounded bg-red-900 text-red-300">Unpaid</span>');

          return '<tr class="hover:bg-gray-700/50">' +
            '<td class="px-4 py-3 text-gray-300">' + b.id + '</td>' +
            '<td class="px-4 py-3"><div class="text-white">' + escapeHtml(b.customer_name) + '</div><div class="text-xs text-gray-400">' + escapeHtml(b.customer_email) + '</div></td>' +
            '<td class="px-4 py-3 text-gray-300">' + formatDate(b.booking_date) + '<div class="text-xs text-gray-400">' + formatTime(b.booking_time) + '</div></td>' +
            '<td class="px-4 py-3 text-gray-300 capitalize">' + b.vehicle_type + '</td>' +
            '<td class="px-4 py-3 text-white">$' + parseFloat(b.total_amount).toFixed(2) + '</td>' +
            '<td class="px-4 py-3">$' + parseFloat(b.deposit_amount).toFixed(2) + ' ' + paidBadge + '</td>' +
            '<td class="px-4 py-3"><select onchange="quickStatusChange(' + b.id + ', this.value)" class="text-xs px-2 py-1 rounded ' + statusClass + ' cursor-pointer border-0 focus:ring-1 focus:ring-white">' +
              '<option value="pending"' + (b.status === 'pending' ? ' selected' : '') + '>pending</option>' +
              '<option value="confirmed"' + (b.status === 'confirmed' ? ' selected' : '') + '>confirmed</option>' +
              '<option value="in_progress"' + (b.status === 'in_progress' ? ' selected' : '') + '>in progress</option>' +
              '<option value="completed"' + (b.status === 'completed' ? ' selected' : '') + '>completed</option>' +
              '<option value="cancelled"' + (b.status === 'cancelled' ? ' selected' : '') + '>cancelled</option>' +
            '</select></td>' +
            '<td class="px-4 py-3"><div class="flex gap-1 flex-wrap">' +
              '<button onclick="viewBooking(' + b.id + ')" class="p-1.5 bg-gray-600 hover:bg-gray-500 rounded text-white" title="View"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg></button>' +
              '<button onclick="editBooking(' + b.id + ')" class="p-1.5 bg-blue-600 hover:bg-blue-500 rounded text-white" title="Edit"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg></button>' +
              (b.deposit_paid ? '' : '<button onclick="copyPaymentLink(' + b.id + ')" class="p-1.5 bg-orange-600 hover:bg-orange-500 rounded text-white" title="Copy deposit payment link"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/></svg></button>') +

                '<span class="text-xs px-2 py-0.5 rounded ' + statusClass + ' text-white">' + statusText + '</span>' +
              '</div>' +
              '<div class="flex items-center gap-3 text-xs text-gray-400">' +
                '<span>Uses: ' + usesText + '</span>' +
                '<span>Expires: ' + expiresText + '</span>' +
              '</div>' +
            '</div>' +
            '<div class="flex gap-2 justify-end sm:justify-start">' +
              '<button onclick="toggleCoupon(' + c.id + ')" class="px-3 py-1.5 text-sm ' + (c.is_active ? 'bg-yellow-600 hover:bg-yellow-500' : 'bg-green-600 hover:bg-green-500') + ' text-white rounded transition-colors">' + (c.is_active ? 'Disable' : 'Enable') + '</button>' +
              '<button onclick="deleteCoupon(' + c.id + ', \'' + c.code + '\')" class="px-3 py-1.5 text-sm bg-red-600 hover:bg-red-500 text-white rounded transition-colors">Delete</button>' +
            '</div>' +
          '</div>' +
        '</div>';
      }).join('');
    }

    window.toggleCoupon = async function(id) {
      try {
        const response = await api('/api/coupons/' + id + '/toggle', { method: 'PATCH' });
        if (response.ok) {
          showToast('Coupon updated');
          loadCoupons();
        } else {
          showToast('Failed to update coupon', 'error');
        }
      } catch (e) {
        showToast('Failed to update coupon', 'error');
      }
    };

    window.deleteCoupon = async function(id, code) {
      if (!confirm('Delete coupon ' + code + '?')) return;
      try {
        const response = await api('/api/coupons/' + id, { method: 'DELETE' });
        if (response.ok) {
          showToast('Coupon deleted');
          loadCoupons();
        } else {
          showToast('Failed to delete coupon', 'error');
        }
      } catch (e) {
        showToast('Failed to delete coupon', 'error');
      }
    };

    // Create coupon form
    document.getElementById('coupon-form').addEventListener('submit', async (e) => {
      e.preventDefault();
      const code = document.getElementById('coupon-code').value.trim();
      const discountType = document.getElementById('coupon-type').value;
      const discountValue = parseFloat(document.getElementById('coupon-value').value);
      const maxUses = document.getElementById('coupon-max-uses').value ? parseInt(document.getElementById('coupon-max-uses').value) : null;
      const expiresAt = document.getElementById('coupon-expires').value || null;

      if (discountType === 'percent' && (discountValue < 0 || discountValue > 100)) {
        showToast('Percent must be between 0 and 100', 'error');
        return;
      }

      try {
        const response = await api('/api/coupons', {
          method: 'POST',
          body: JSON.stringify({ code, discountType, discountValue, maxUses, expiresAt })
        });
        if (response.ok) {
          showToast('Coupon created: ' + code.toUpperCase());
          document.getElementById('coupon-form').reset();
          loadCoupons();
        } else {
          const data = await response.json();
          showToast(data.error || 'Failed to create coupon', 'error');
        }
      } catch (e) {
        showToast('Failed to create coupon', 'error');
      }
    });

    // Quotes toggle
    document.getElementById("toggle-quotes").addEventListener("click", () => {
      const container = document.getElementById("quotes-container");
      const icon = document.getElementById("quotes-toggle-icon");
      container.classList.toggle("hidden");
      icon.classList.toggle("rotate-180");
      if (!container.classList.contains("hidden") && quotes.length === 0) {
        loadQuotes();
      }
    });

    document.getElementById("refresh-quotes-btn").addEventListener("click", loadQuotes);

    document.getElementById("quotes-filter-status").addEventListener("change", renderQuotesTable);

    async function loadQuotes() {
      try {
        const response = await fetch("/api/quotes", {
          headers: { "Authorization": "Bearer " + accessToken }
        });
        if (response.ok) {
          quotes = await response.json();
          document.getElementById("quotes-count").textContent = "(" + quotes.length + ")";
          renderQuotesTable();
        } else if (response.status === 401) {
          localStorage.removeItem("accessToken");
          window.location.href = "/manage/login";
        }
      } catch (e) {
        showToast("Failed to load quotes", "error");
      }
    }

    function renderQuotesTable() {
      const filter = document.getElementById("quotes-filter-status").value;
      const filtered = filter ? quotes.filter(q => q.status === filter) : quotes;
      const tbody = document.getElementById("quotes-table");

      if (filtered.length === 0) {
        tbody.innerHTML = `<tr><td colspan="8" class="px-3 py-4 text-center text-gray-400">No quotes found</td></tr>`;
        return;
      }

      tbody.innerHTML = filtered.map(q => {
        const date = new Date(q.created_at).toLocaleDateString();
        const statusColors = {
          new: "bg-yellow-600",
          contacted: "bg-blue-600",
          converted: "bg-green-600",
          closed: "bg-gray-600"
        };
        const statusColor = statusColors[q.status] || "bg-gray-600";
        const serviceName = {
          "exterior": "Exterior",
          "interior": "Interior",
          "deep-interior": "Deep Interior",
          "package-deal": "Package Deal",
          "disaster": "Disaster"
        }[q.service_level] || q.service_level;

        return `<tr class="hover:bg-gray-700/50">
          <td class="px-3 py-2 text-gray-300">${date}</td>
          <td class="px-3 py-2 text-white">${q.customer_name}</td>
          <td class="px-3 py-2">
            <div class="text-gray-300">${q.customer_email}</div>
            <div class="text-gray-500 text-xs">${q.customer_phone}</div>
          </td>
          <td class="px-3 py-2 text-gray-300 capitalize">${q.vehicle_type}</td>
          <td class="px-3 py-2 text-gray-300">${serviceName}</td>
          <td class="px-3 py-2 text-green-400">\$${parseFloat(q.estimated_price).toFixed(2)}</td>
          <td class="px-3 py-2">
            <select onchange="updateQuoteStatus(${q.id}, this.value)" class="px-2 py-1 text-xs rounded ${statusColor} text-white border-0 cursor-pointer">
              <option value="new" ${q.status === "new" ? "selected" : ""}>New</option>
              <option value="contacted" ${q.status === "contacted" ? "selected" : ""}>Contacted</option>
              <option value="converted" ${q.status === "converted" ? "selected" : ""}>Converted</option>
              <option value="closed" ${q.status === "closed" ? "selected" : ""}>Closed</option>
            </select>
          </td>
          <td class="px-3 py-2">
            <button onclick="createInvoiceFromQuote(${q.id})" class="text-green-400 hover:text-green-300 text-xs mr-2">Invoice</button><button onclick="viewQuoteMessage(${q.id})" class="text-blue-400 hover:text-blue-300 text-xs">View</button>
          </td>
        </tr>`;
      }).join("");
    }

    async function updateQuoteStatus(id, status) {
      try {
        const response = await fetch("/api/quotes/" + id + "/status", {
          method: "PATCH",
          headers: {
            "Authorization": "Bearer " + accessToken,
            "Content-Type": "application/json"
          },
          body: JSON.stringify({ status })
        });
        if (response.ok) {
          const updated = await response.json();
          quotes = quotes.map(q => q.id === id ? updated : q);
          renderQuotesTable();
          showToast("Status updated");
        } else {
          showToast("Failed to update status", "error");
        }
      } catch (e) {
        showToast("Failed to update status", "error");
      }
    }

    function viewQuoteMessage(id) {
      const quote = quotes.find(q => q.id === id);
      if (!quote) return;
      const msg = quote.message || "No message provided";
      alert("Message from " + quote.customer_name + ":\n\n" + msg);
    }


    function createInvoiceFromQuote(id) {
      const quote = quotes.find(q => q.id === id);
      if (!quote) return;

      // Service level to service ID mapping
      const serviceMap = {
        "exterior": "1",
        "interior": "2", 
        "deep-interior": "3",
        "package-deal": "4",
        "disaster": "5"
      };

      // Expand the Create Invoice section if collapsed
      const createContainer = document.getElementById("create-form-container");
      const toggleIcon = document.getElementById("toggle-icon");
      if (createContainer.classList.contains("hidden")) {
        createContainer.classList.remove("hidden");
        toggleIcon.classList.add("rotate-180");
      }

      // Pre-fill the form
      const form = document.getElementById("create-form");
      form.querySelector("[name=customerName]").value = quote.customer_name || "";
      form.querySelector("[name=customerEmail]").value = quote.customer_email || "";
      form.querySelector("[name=customerPhone]").value = quote.customer_phone || "";
      form.querySelector("[name=vehicleType]").value = quote.vehicle_type || "sedan";
      
      const serviceId = serviceMap[quote.service_level] || "1";
      form.querySelector("[name=serviceId]").value = serviceId;
      form.querySelector("[name=notes]").value = quote.message || "";

      // Pre-select addons from quote
      document.querySelectorAll(".addon-checkbox").forEach(cb => cb.checked = false);
      if (quote.selected_addons && Array.isArray(quote.selected_addons)) {
        quote.selected_addons.forEach(addonName => { const addon = addons.find(a => a.name === addonName); if (!addon) return;
          const checkbox = document.querySelector(`.addon-checkbox[value="${addon.id}"]`);
          if (checkbox) checkbox.checked = true;
        });
      }

      // Trigger change event to update price calculation
      form.querySelector("[name=vehicleType]").dispatchEvent(new Event("change"));
      form.querySelector("[name=serviceId]").dispatchEvent(new Event("change"));
      calculateTotal();

      // Scroll to the form
      document.getElementById("toggle-create").scrollIntoView({ behavior: "smooth", block: "start" });

      // Update quote status to contacted
      if (quote.status === "new") {
        updateQuoteStatus(id, "contacted");
      }

      showToast("Form pre-filled from quote");
    }
    // Calendar view
    let calendarMonth = new Date().getMonth();
    let calendarYear = new Date().getFullYear();

    document.getElementById('view-list-btn').addEventListener('click', () => {
      document.getElementById('list-view').classList.remove('hidden');
      document.getElementById('calendar-view').classList.add('hidden');
      document.getElementById('view-list-btn').classList.add('bg-[#EB6C1D]', 'text-white');
      document.getElementById('view-list-btn').classList.remove('bg-gray-700', 'text-gray-300');
      document.getElementById('view-calendar-btn').classList.remove('bg-[#EB6C1D]', 'text-white');
      document.getElementById('view-calendar-btn').classList.add('bg-gray-700', 'text-gray-300');
    });

    document.getElementById('view-calendar-btn').addEventListener('click', () => {
      document.getElementById('list-view').classList.add('hidden');
      document.getElementById('calendar-view').classList.remove('hidden');
      document.getElementById('view-calendar-btn').classList.add('bg-[#EB6C1D]', 'text-white');
      document.getElementById('view-calendar-btn').classList.remove('bg-gray-700', 'text-gray-300');
      document.getElementById('view-list-btn').classList.remove('bg-[#EB6C1D]', 'text-white');
      document.getElementById('view-list-btn').classList.add('bg-gray-700', 'text-gray-300');
      renderCalendar();
    });

    document.getElementById('cal-prev').addEventListener('click', () => {
      calendarMonth--;
      if (calendarMonth < 0) { calendarMonth = 11; calendarYear--; }
      renderCalendar();
    });

    document.getElementById('cal-next').addEventListener('click', () => {
      calendarMonth++;
      if (calendarMonth > 11) { calendarMonth = 0; calendarYear++; }
      renderCalendar();
    });

    function renderCalendar() {
      const monthNames = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
      document.getElementById('cal-month-title').textContent = monthNames[calendarMonth] + ' ' + calendarYear;

      const firstDay = new Date(calendarYear, calendarMonth, 1).getDay();
      const daysInMonth = new Date(calendarYear, calendarMonth + 1, 0).getDate();
      const today = new Date().toISOString().split('T')[0];

      // Count bookings per day
      const bookingCounts = {};
      bookings.forEach(b => {
        if (b.booking_date && b.status !== 'cancelled') {
          const parts = b.booking_date.split('-');
          const year = parseInt(parts[0]);
          const month = parseInt(parts[1]) - 1; // JS months are 0-indexed
          const day = parseInt(parts[2]);
          if (month === calendarMonth && year === calendarYear) {
            bookingCounts[day] = (bookingCounts[day] || 0) + 1;
          }
        }
      });

      let html = '';
      // Empty cells for days before first day
      for (let i = 0; i < firstDay; i++) {
        html += '<div class="h-16 bg-gray-700/30 rounded"></div>';
      }
      // Day cells
      for (let day = 1; day <= daysInMonth; day++) {
        const dateStr = calendarYear + '-' + String(calendarMonth + 1).padStart(2, '0') + '-' + String(day).padStart(2, '0');
        const isToday = dateStr === today;
        const count = bookingCounts[day] || 0;
        const bgClass = isToday ? 'bg-[#EB6C1D]/20 border border-[#EB6C1D]' : 'bg-gray-700/50 hover:bg-gray-600/50';
        html += '<div class="h-16 ' + bgClass + ' rounded p-1 cursor-pointer" onclick="showDayBookings(\'' + dateStr + '\')">' +
          '<div class="text-sm ' + (isToday ? 'text-[#EB6C1D] font-bold' : 'text-gray-300') + '">' + day + '</div>' +
          (count > 0 ? '<div class="mt-1 text-xs bg-blue-600 text-white rounded px-1 text-center">' + count + ' appt' + (count > 1 ? 's' : '') + '</div>' : '') +
        '</div>';
      }

      document.getElementById('cal-grid').innerHTML = html;
    }

    function showDayBookings(dateStr) {
      // Filter bookings for this date (handle ISO format)
      const dayBookings = bookings.filter(b => {
        if (!b.booking_date) return false;
        return b.booking_date.split('T')[0] === dateStr;
      });

      // Format the date for the title
      const dateOnly = dateStr.split('T')[0];
      const date = new Date(dateOnly + 'T00:00:00');
      const titleDate = date.toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric', year: 'numeric' });
      document.getElementById('calendar-day-title').textContent = 'Bookings for ' + titleDate;

      // Build content
      const content = document.getElementById('calendar-day-content');
      if (dayBookings.length === 0) {
        content.innerHTML = '<p class="text-gray-400 text-center py-4">No bookings for this day</p>';
      } else {
        content.innerHTML = dayBookings.map(b => {
          const statusColors = {
            pending: 'bg-yellow-500/20 text-yellow-400',
            confirmed: 'bg-blue-500/20 text-blue-400',
            in_progress: 'bg-purple-500/20 text-purple-400',
            completed: 'bg-green-500/20 text-green-400',
            cancelled: 'bg-red-500/20 text-red-400'
          };
          const statusClass = statusColors[b.status] || 'bg-gray-500/20 text-gray-400';
          return '<div class="bg-gray-700/50 rounded-lg p-4 hover:bg-gray-700 cursor-pointer" onclick="viewBooking(' + b.id + '); closeCalendarDayModal();">' +
            '<div class="flex justify-between items-start mb-2">' +
              '<div class="font-medium text-white">' + escapeHtml(b.customer_name) + '</div>' +
              '<span class="px-2 py-0.5 rounded text-xs ' + statusClass + '">' + b.status.replace('_', ' ') + '</span>' +
            '</div>' +
            '<div class="text-sm text-gray-400 space-y-1">' +
              '<div class="flex justify-between"><span>Time:</span><span class="text-gray-300">' + formatTime(b.booking_time) + '</span></div>' +
              '<div class="flex justify-between"><span>Vehicle:</span><span class="text-gray-300 capitalize">' + b.vehicle_type + '</span></div>' +
              '<div class="flex justify-between"><span>Total:</span><span class="text-gray-300">$' + parseFloat(b.total_amount).toFixed(2) + '</span></div>' +
              '<div class="flex justify-between"><span>Deposit:</span><span class="text-gray-300">$' + parseFloat(b.deposit_amount).toFixed(2) + ' (' + (b.deposit_paid ? 'Paid' : 'Unpaid') + ')</span></div>' +
            '</div>' +
          '</div>';
        }).join('');
      }

      // Show modal
      const modal = document.getElementById('calendar-day-modal');
      modal.classList.remove('hidden');
      modal.classList.add('flex');
    }

    function closeCalendarDayModal() {
      const modal = document.getElementById('calendar-day-modal');
      modal.classList.add('hidden');
      modal.classList.remove('flex');
    }

    // Auto-refresh every 60 seconds
    setInterval(() => {
      loadBookings();
      loadStats();
      // Re-render calendar if visible
      if (!document.getElementById('calendar-view').classList.contains('hidden')) {
        renderCalendar();
      }
    }, 60000);

    // Initialize
    loadServices();
    loadAddons();
    loadStats();
    loadBookings();
  </script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</Layout>

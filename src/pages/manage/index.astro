---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Admin Dashboard - Showers Auto Detail">
  <div id="app" class="min-h-screen bg-gray-900 hidden">
    <!-- Toast Container -->
    <div id="toast-container" class="fixed bottom-4 left-4 z-50 space-y-2"></div>

    <!-- Confirmation Modal -->
    <div id="confirm-modal" class="fixed inset-0 bg-black/50 z-40 hidden items-center justify-center">
      <div class="bg-gray-800 rounded-lg p-6 max-w-md mx-4 shadow-xl">
        <h3 id="confirm-title" class="text-xl font-bold text-white mb-2">Confirm Action</h3>
        <p id="confirm-message" class="text-gray-300 mb-6">Are you sure?</p>
        <div class="flex justify-end gap-3">
          <button id="confirm-cancel" class="px-4 py-2 bg-gray-600 hover:bg-gray-500 text-white rounded-lg transition-colors">Cancel</button>
          <button id="confirm-ok" class="px-4 py-2 bg-red-600 hover:bg-red-500 text-white rounded-lg transition-colors">Confirm</button>
        </div>
      </div>
    </div>

    <!-- Edit Booking Modal -->
    <div id="edit-modal" class="fixed inset-0 bg-black/50 z-40 hidden items-center justify-center overflow-y-auto py-8">
      <div class="bg-gray-800 rounded-lg p-6 max-w-2xl mx-4 shadow-xl w-full">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-xl font-bold text-white">Edit Booking</h3>
          <button id="edit-close" class="text-gray-400 hover:text-white text-2xl">&times;</button>
        </div>
        <form id="edit-form" class="space-y-4">
          <input type="hidden" id="edit-id">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm text-gray-300 mb-1">Customer Name</label>
              <input type="text" id="edit-name" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white">
            </div>
            <div>
              <label class="block text-sm text-gray-300 mb-1">Email</label>
              <input type="email" id="edit-email" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white">
            </div>
            <div>
              <label class="block text-sm text-gray-300 mb-1">Phone</label>
              <input type="tel" id="edit-phone" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white">
            </div>
            <div>
              <label class="block text-sm text-gray-300 mb-1">Vehicle Type</label>
              <select id="edit-vehicle" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white">
                <option value="sedan">Sedan/Coupe</option>
                <option value="suv">SUV/Truck</option>
                <option value="commercial">Commercial</option>
              </select>
            </div>
            <div>
              <label class="block text-sm text-gray-300 mb-1">Date</label>
              <input type="date" id="edit-date" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white">
            </div>
            <div>
              <label class="block text-sm text-gray-300 mb-1">Time</label>
              <input type="time" id="edit-time" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white">
            </div>
            <div>
              <label class="block text-sm text-gray-300 mb-1">Total Amount ($)</label>
              <input type="number" step="0.01" id="edit-total" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white">
            </div>
            <div>
              <label class="block text-sm text-gray-300 mb-1">Deposit Amount ($)</label>
              <input type="number" step="0.01" id="edit-deposit" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white">
            </div>
            <div>
              <label class="block text-sm text-gray-300 mb-1">Status</label>
              <select id="edit-status" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white">
                <option value="pending">Pending</option>
                <option value="confirmed">Confirmed</option>
                <option value="in_progress">In Progress</option>
                <option value="completed">Completed</option>
                <option value="cancelled">Cancelled</option>
              </select>
            </div>
          </div>
          <div>
            <label class="block text-sm text-gray-300 mb-1">Address</label>
            <input type="text" id="edit-address" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white">
          </div>
          <div>
            <label class="block text-sm text-gray-300 mb-1">Notes</label>
            <textarea id="edit-notes" rows="2" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white"></textarea>
          </div>
          <div class="flex justify-end gap-3 pt-4">
            <button type="button" id="edit-cancel-btn" class="px-4 py-2 bg-gray-600 hover:bg-gray-500 text-white rounded-lg">Cancel</button>
            <button type="submit" class="px-4 py-2 bg-[#EB6C1D] hover:bg-[#D35E14] text-white rounded-lg">Save Changes</button>
          </div>
        </form>
      </div>
    </div>

    <!-- View Booking Modal -->
    <div id="view-modal" class="fixed inset-0 bg-black/50 z-40 hidden items-center justify-center overflow-y-auto py-8">
      <div class="bg-gray-800 rounded-lg p-6 max-w-lg mx-4 shadow-xl w-full">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-xl font-bold text-white">Booking Details</h3>
          <button id="view-close" class="text-gray-400 hover:text-white text-2xl">&times;</button>
        </div>
        <div id="view-content" class="space-y-3 text-gray-300">
          <!-- Filled dynamically -->
        </div>
        <div class="flex justify-end gap-3 pt-4 mt-4 border-t border-gray-700">
          <button id="view-edit-btn" class="px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded-lg">Edit</button>
          <button id="view-close-btn" class="px-4 py-2 bg-gray-600 hover:bg-gray-500 text-white rounded-lg">Close</button>
        </div>
      </div>
    </div>

    <!-- Calendar Day Modal -->
    <div id="calendar-day-modal" class="fixed inset-0 bg-black/50 z-40 hidden items-center justify-center overflow-y-auto py-8">
      <div class="bg-gray-800 rounded-lg p-6 max-w-2xl mx-4 shadow-xl w-full">
        <div class="flex justify-between items-center mb-4">
          <h3 id="calendar-day-title" class="text-xl font-bold text-white">Bookings for December 15, 2024</h3>
          <button id="calendar-day-close" class="text-gray-400 hover:text-white text-2xl">&times;</button>
        </div>
        <div id="calendar-day-content" class="space-y-3 max-h-96 overflow-y-auto">
          <!-- Filled dynamically -->
        </div>
        <div class="flex justify-end pt-4 mt-4 border-t border-gray-700">
          <button id="calendar-day-close-btn" class="px-4 py-2 bg-gray-600 hover:bg-gray-500 text-white rounded-lg">Close</button>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-6">
      <!-- Header -->
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-white">Admin Dashboard</h1>
        <div class="flex items-center gap-4">
          <a href="/manage/settings" class="text-gray-300 hover:text-white transition-colors">Settings</a>
          <button id="logout-btn" class="px-4 py-2 bg-red-600 hover:bg-red-500 text-white rounded-lg transition-colors">Logout</button>
        </div>
      </div>

      <!-- Today's Schedule -->
      <div class="bg-gray-800 rounded-lg p-4 mb-6">
        <h2 class="text-lg font-semibold text-white mb-3">Today's Schedule</h2>
        <div id="today-schedule" class="space-y-2">
          <p class="text-gray-400 text-sm">Loading...</p>
        </div>
      </div>

      <!-- Stats Bar -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-gray-800 rounded-lg p-4">
          <p class="text-gray-400 text-sm">Total Bookings</p>
          <p id="stat-total" class="text-2xl font-bold text-white">-</p>
        </div>
        <div class="bg-gray-800 rounded-lg p-4">
          <p class="text-gray-400 text-sm">Pending Payments</p>
          <p id="stat-pending" class="text-2xl font-bold text-yellow-400">-</p>
        </div>
        <div class="bg-gray-800 rounded-lg p-4">
          <p class="text-gray-400 text-sm">This Month Revenue</p>
          <p id="stat-revenue" class="text-2xl font-bold text-green-400">-</p>
        </div>
        <div class="bg-gray-800 rounded-lg p-4">
          <p class="text-gray-400 text-sm">Confirmed</p>
          <p id="stat-confirmed" class="text-2xl font-bold text-blue-400">-</p>
        </div>
      </div>

      <!-- Revenue Chart -->
      <div class="bg-gray-800 rounded-lg mb-6">
        <button id="toggle-chart" class="w-full px-6 py-4 flex justify-between items-center text-left">
          <span class="text-lg font-semibold text-white">Revenue (Last 30 Days)</span>
          <svg id="chart-toggle-icon" class="w-5 h-5 text-gray-400 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div id="chart-container" class="hidden px-6 pb-6">
          <canvas id="revenue-chart" height="200"></canvas>
        </div>
      </div>

      <!-- Quote Requests -->
      <div class="bg-gray-800 rounded-lg mb-6">
        <button id="toggle-quotes" class="w-full px-6 py-4 flex justify-between items-center text-left">
          <span class="text-lg font-semibold text-white">Quote Requests <span id="quotes-count" class="text-sm text-gray-400">(0)</span></span>
          <svg id="quotes-toggle-icon" class="w-5 h-5 text-gray-400 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div id="quotes-container" class="hidden px-6 pb-6">
          <!-- Filter bar -->
          <div class="flex gap-3 mb-4 pt-2">
            <select id="quotes-filter-status" class="px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white text-sm">
              <option value="">All Statuses</option>
              <option value="new">New</option>
              <option value="contacted">Contacted</option>
              <option value="converted">Converted</option>
              <option value="closed">Closed</option>
            </select>
            <button id="refresh-quotes-btn" class="px-3 py-2 bg-gray-600 hover:bg-gray-500 text-white rounded-lg text-sm transition-colors">Refresh</button>
          </div>
          <!-- Quotes table -->
          <div class="overflow-x-auto">
            <table class="w-full text-sm">
              <thead class="bg-gray-700">
                <tr>
                  <th class="px-3 py-2 text-left text-gray-300">Date</th>
                  <th class="px-3 py-2 text-left text-gray-300">Customer</th>
                  <th class="px-3 py-2 text-left text-gray-300">Contact</th>
                  <th class="px-3 py-2 text-left text-gray-300">Vehicle</th>
                  <th class="px-3 py-2 text-left text-gray-300">Service</th>
                  <th class="px-3 py-2 text-left text-gray-300">Est. Price</th>
                  <th class="px-3 py-2 text-left text-gray-300">Status</th>
                  <th class="px-3 py-2 text-left text-gray-300">Actions</th>
                </tr>
              </thead>
              <tbody id="quotes-table" class="divide-y divide-gray-700">
                <tr><td colspan="8" class="px-3 py-4 text-center text-gray-400">Loading quotes...</td></tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Coupon Manager -->
      <div class="bg-gray-800 rounded-lg mb-6">
        <button id="toggle-coupons" class="w-full px-6 py-4 flex justify-between items-center text-left">
          <span class="text-lg font-semibold text-white">Manage Coupons</span>
          <svg id="coupons-toggle-icon" class="w-5 h-5 text-gray-400 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div id="coupons-container" class="hidden px-6 pb-6">
          <!-- Vouch Settings Row -->
          <div class="flex items-center justify-between mb-4 pt-2">
            <div class="flex items-center gap-2">
              <button id="vouch-settings-btn" type="button" onclick="toggleVouchSettings()" class="p-1.5 bg-gray-700 hover:bg-gray-600 rounded-lg transition-colors" title="Vouch Coupon Settings">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </button>
              <span class="text-xs text-gray-500">Vouch Settings</span>
            </div>
          </div>
          <!-- Vouch Settings Popover -->
          <div id="vouch-settings-popover" class="hidden mb-4 p-4 bg-gray-700/50 rounded-lg border border-gray-600">
            <h4 class="text-white font-medium mb-3">Vouch Coupon Settings</h4>
            <div class="flex items-center gap-3">
              <label class="text-sm text-gray-400">Default Discount %</label>
              <input type="number" id="vouch-discount-setting" min="1" max="100" value="15" class="w-20 px-2 py-1 bg-gray-700 border border-gray-600 rounded text-white text-sm text-center">
              <button type="button" onclick="saveVouchSettings()" class="px-3 py-1 bg-green-600 hover:bg-green-500 text-white text-sm rounded transition-colors">Save</button>
            </div>
          </div>
          <!-- Generate Vouch Coupon -->
          <div class="mb-6 p-4 bg-green-900/30 rounded-lg border border-green-700/50">
            <div class="flex items-center justify-between">
              <div>
                <h4 class="text-white font-medium">Quick Vouch Coupon</h4>
                <p class="text-sm text-gray-400">One-time use, <span id="vouch-percent-display">15</span>% off, never expires</p>
              </div>
              <button type="button" id="generate-vouch-btn" onclick="generateVouchCoupon()" class="px-4 py-2 bg-green-600 hover:bg-green-500 text-white rounded text-sm font-medium transition-colors">Generate Vouch</button>
            </div>
            <div id="vouch-result" class="hidden mt-3 p-3 bg-gray-800 rounded flex items-center justify-between">
              <code id="vouch-code-display" class="text-green-400 font-mono text-lg"></code>
              <button type="button" onclick="copyVouchCode()" class="px-3 py-1 bg-gray-700 hover:bg-gray-600 text-white text-sm rounded transition-colors">Copy</button>
            </div>
          </div>
          <!-- Create Coupon Form -->
          <form id="coupon-form" class="mb-6 p-4 bg-gray-700/50 rounded-lg">
            <h4 class="text-white font-medium mb-3">Create New Coupon</h4>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-3">
              <div>
                <label class="block text-xs text-gray-400 mb-1">Code</label>
                <input type="text" id="coupon-code" required placeholder="SAVE10" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded text-white text-sm uppercase">
              </div>
              <div>
                <label class="block text-xs text-gray-400 mb-1">Type</label>
                <select id="coupon-type" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded text-white text-sm">
                  <option value="percent">Percentage (%)</option>
                  <option value="fixed">Fixed Amount ($)</option>
                </select>
              </div>
              <div>
                <label class="block text-xs text-gray-400 mb-1">Value</label>
                <input type="number" id="coupon-value" required min="0" step="0.01" placeholder="10" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded text-white text-sm">
              </div>
              <div>
                <label class="block text-xs text-gray-400 mb-1">Max Uses (optional)</label>
                <input type="number" id="coupon-max-uses" min="1" placeholder="Unlimited" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded text-white text-sm">
              </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mt-3">
              <div>
                <label class="block text-xs text-gray-400 mb-1">Expires (optional)</label>
                <input type="datetime-local" id="coupon-expires" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded text-white text-sm">
              </div>
              <div class="flex items-end">
                <button type="submit" class="w-full px-4 py-2 bg-[#EB6C1D] hover:bg-[#D35E14] text-white rounded text-sm font-medium transition-colors">Create Coupon</button>
              </div>
            </div>
          </form>
          <!-- Coupons List -->
          <div id="coupons-list" class="space-y-2">
            <p class="text-gray-400 text-sm">Loading coupons...</p>
          </div>
        </div>
      </div>

      <!-- Create Invoice Section -->
      <div class="bg-gray-800 rounded-lg mb-6">
        <button id="toggle-create" class="w-full px-6 py-4 flex justify-between items-center text-left">
          <span class="text-lg font-semibold text-white">Create New Invoice</span>
          <svg id="toggle-icon" class="w-5 h-5 text-gray-400 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div id="create-form-container" class="hidden px-6 pb-6">
          <form id="create-form" class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div>
                <label class="block text-sm text-gray-300 mb-1">Customer Name *</label>
                <input type="text" name="customerName" required class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-[#EB6C1D] focus:border-transparent">
              </div>
              <div>
                <label class="block text-sm text-gray-300 mb-1">Email *</label>
                <input type="email" name="customerEmail" required class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-[#EB6C1D] focus:border-transparent">
              </div>
              <div>
                <label class="block text-sm text-gray-300 mb-1">Phone *</label>
                <input type="tel" name="customerPhone" required class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-[#EB6C1D] focus:border-transparent">
              </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div>
                <label class="block text-sm text-gray-300 mb-1">Vehicle Type *</label>
                <select name="vehicleType" required class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white">
                  <option value="sedan">Sedan/Coupe</option>
                  <option value="suv">SUV/Truck</option>
                  <option value="commercial">Commercial</option>
                </select>
              </div>
              <div>
                <label class="block text-sm text-gray-300 mb-1">Service *</label>
                <select name="serviceId" id="service-select" required class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white">
                  <option value="">Loading services...</option>
                </select>
              </div>
              <div>
                <label class="block text-sm text-gray-300 mb-1">Date *</label>
                <input type="date" name="bookingDate" required class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white">
              </div>
            </div>
            <div>
              <label class="block text-sm text-gray-300 mb-1">Add-ons (optional)</label>
              <div id="addon-checkboxes" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white max-h-32 overflow-y-auto space-y-2">
                <p class="text-gray-400 text-sm">Loading add-ons...</p>
              </div>
            </div>
            <div>
              <label class="block text-sm text-gray-300 mb-1">Custom Charges (optional)</label>
              <div id="custom-items-list" class="space-y-2 mb-2"></div>
              <button type="button" id="add-custom-item" class="text-sm text-[#EB6C1D] hover:underline">+ Add custom charge</button>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div>
                <label class="block text-sm text-gray-300 mb-1">Time *</label>
                <input type="time" name="bookingTime" required class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white">
              </div>
              <div class="md:col-span-2">
                <label class="block text-sm text-gray-300 mb-1">Address</label>
                <input type="text" name="address" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white">
              </div>
            </div>
            <div>
              <label class="block text-sm text-gray-300 mb-1">Notes</label>
              <textarea name="notes" rows="2" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white"></textarea>
            </div>
            <div class="flex items-center gap-2">
              <input type="checkbox" id="send-email" checked class="rounded bg-gray-700 border-gray-600 text-[#EB6C1D] focus:ring-[#EB6C1D]">
              <label for="send-email" class="text-sm text-gray-300">Send confirmation email to customer</label>
            </div>
            <div class="bg-gray-700/50 rounded-lg p-4 border border-gray-600">
              <div class="flex justify-between items-center text-lg">
                <span class="text-gray-300">Estimated Total:</span>
                <span id="calc-total" class="text-white font-bold">$0.00</span>
              </div>
              <div class="flex justify-between items-center text-sm mt-2">
                <span class="text-gray-400">Deposit (25%):</span>
                <span id="calc-deposit" class="text-gray-300">$0.00</span>
              </div>
            </div>
            <div class="flex justify-end">
              <button type="submit" class="px-6 py-2 bg-[#EB6C1D] hover:bg-[#D35E14] text-white font-semibold rounded-lg transition-colors">
                Create Invoice
              </button>
            </div>
          </form>
        </div>
      </div>

      <!-- View Toggle -->
      <div class="flex gap-2 mb-4">
        <button id="view-list-btn" class="px-4 py-2 bg-[#EB6C1D] text-white rounded-lg font-medium">List</button>

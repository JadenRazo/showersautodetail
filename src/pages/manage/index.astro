      container.innerHTML = coupons.map(c => {
        const isExpired = c.expires_at && new Date(c.expires_at) < new Date();
        const isMaxed = c.max_uses && c.used_count >= c.max_uses;
        const statusClass = !c.is_active ? 'bg-gray-600' : (isExpired || isMaxed) ? 'bg-red-900/50' : 'bg-green-900/50';
        const statusText = !c.is_active ? 'Inactive' : isExpired ? 'Expired' : isMaxed ? 'Maxed Out' : 'Active';
        const discountText = c.discount_type === 'percent' ? c.discount_value + '%' : '$' + parseFloat(c.discount_value).toFixed(2);
        const usesText = c.max_uses ? c.used_count + '/' + c.max_uses : c.used_count + '/';
        const expiresText = c.expires_at ? new Date(c.expires_at).toLocaleDateString() : 'Never';

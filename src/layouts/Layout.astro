---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  noindex?: boolean;
  ogImage?: string;
}

const {
  title,
  description = "Professional mobile auto detailing service in Southern California. Book online for car detailing, interior cleaning, ceramic coating, and more. Serving San Bernardino, Orange, Los Angeles, and Riverside counties.",
  noindex = false,
  ogImage = '/images/og-image.jpg'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, 'https://showersautodetail.com');
const ogImageURL = new URL(ogImage, 'https://showersautodetail.com');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#EB6C1D" />
    <meta name="geo.region" content="US-CA" />
    <meta name="geo.placename" content="Southern California" />

    {noindex ? (
      <meta name="robots" content="noindex, nofollow" />
    ) : (
      <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    )}

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL.href} />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL.href} />
    <meta property="og:image:width" content="1920" />
    <meta property="og:image:height" content="1080" />
    <meta property="og:image:alt" content="Showers Auto Detail - Professional Mobile Car Detailing" />
    <meta property="og:site_name" content="Showers Auto Detail" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL.href} />
    <meta name="twitter:image:alt" content="Showers Auto Detail - Professional Mobile Car Detailing" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Preconnect to external services -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://web.squarecdn.com" />

    <title>{title}</title>
  </head>
  <body class="antialiased">
    <div class="app-shell">
      <slot />
    </div>
  </body>
</html>
